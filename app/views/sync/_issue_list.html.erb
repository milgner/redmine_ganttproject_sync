<% if @issues.empty? %>
	<%= l(:no_pending_issues) %>
<% else %>
<ul>
<% issues.each do |issue| %>
	<li>
	<%= check_box_tag "task#{issue.id}" %><%= "#{issue.id} - #{issue.name}" %>
	<% if issue.children.size > 0 %>
		<%= render :partial => 'issue_list', :locals => {:issues => issue.children } %>
	<% end %>
	</li>
<% end %>
</ul>
<% end %>